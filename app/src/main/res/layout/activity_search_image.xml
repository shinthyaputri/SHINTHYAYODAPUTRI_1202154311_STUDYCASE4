<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.praktikum.shinthya.shinthyayodaputri_1202154311_studycasemodul4.searchImage"
    android:background="#FFCC5C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="Cari Gambar"
            android:textSize="30sp"
            android:textColor="#88D8B0"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/URL"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQUBvHpNRdi1A7l8Jf956t3dRxeDPiUBa725V-JwjXEHML797Hd" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="#ea744c"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:text="Search"
            android:onClick="search"
            android:textAllCaps="false"/>

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"/>

    </LinearLayout>
</ScrollView>
